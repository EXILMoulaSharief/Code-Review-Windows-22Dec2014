<Page x:ConnectionId='1'
    x:Class="TeacherApp.Client.UI.WinApp.AttendanceBar1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >
    <Page.Resources>
        <local:ImageConverter x:Key="imageConveter"/>
        <DataTemplate x:Key="imageTemplate">
            <Grid Width="150">
                <StackPanel Height="190" Background="White">
                    <Image Source="{Binding Path=Thumbnail, Converter={StaticResource imageConveter}}" Stretch="Fill" Width="150" Height="130"/>
                    <TextBlock FontWeight="Bold" FontSize="22" Text="Mark" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                    <TextBlock FontWeight="Light" FontSize="18" Text="Richard" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
                </StackPanel>

            </Grid>
        </DataTemplate>
        <CollectionViewSource
            x:Name="picturesSource"/>
        <CollectionViewSource x:Name="AbsentSource"></CollectionViewSource>
    </Page.Resources>
    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='2' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                            />
                <Button Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="White" BorderThickness="0.5" Margin="400 -1 0 0"/>
                <Button x:ConnectionId='3' Margin="400,-70,0,0" Height="63" Width="200" Content="Acheivement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='4' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <Button Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="119" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                        >
                </Button>
                <StackPanel Margin="920,-40,0,0" Height="43" Visibility="Collapsed" x:Name="SP_Search" HorizontalAlignment="Left">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Width="200" Foreground="#00638D"/>
                    <Button x:ConnectionId='8' Height="44" Width="47" Margin="198 -43 0 0"                              >
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <Image Source="Assets/selectall.png"></Image>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <Image Source="Assets/undo.png" Width="20" />
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <Image Source="Assets/pinico.png"></Image>
                </AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="List View" Margin="750 0 0 0"                           >
                    <Image Source="Assets/BottomBarContext.png"></Image>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Margin="0,0,-164,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="160"></RowDefinition>
            <RowDefinition Height="500"></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="Assets/IconPresent.png" Height="20" Width="20" Margin="115,0,0,0"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
        <TextBlock Text="PRESENT" Margin="135,0,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" Grid.Row="1" FontSize="18" Width="225" Height="57" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>

        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="113,20,0,34" HorizontalAlignment="left" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GridView x:ConnectionId='11' x:Name="PresentGrid" Margin="0,15,-10,0" 
                  VerticalAlignment="Top" Height="250" Width="1000" 
                   ItemsSource="{Binding Source={StaticResource picturesSource}}"
                   ItemTemplate="{StaticResource imageTemplate}" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"                                    SelectionMode="Multiple">
                <GridView.Foreground>
                    <ImageBrush/>
                </GridView.Foreground>
                <GridView.Background>
                    <ImageBrush/>
                </GridView.Background>
                <GridView.SemanticZoomOwner>
                    <SemanticZoom/>
                </GridView.SemanticZoomOwner>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Height" Value="200" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="2"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            <!--- Absent Grid-->
            <Image Source="Assets/IconAbsent.png" Height="20" Width="20" Margin="0,250,0,0"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
            <TextBlock Text="ABSENT" Margin="20,250,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" FontSize="18" Width="225" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>

            <GridView x:ConnectionId='12' x:Name="AbsentGrid" Margin="0,280, 0,0" 
                  VerticalAlignment="Top" Height="250" Width="1000" 
                   ItemsSource="{Binding Source={StaticResource AbsentSource}}"
                   ItemTemplate="{StaticResource imageTemplate}" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"                                    SelectionMode="Multiple">
                <GridView.Foreground>
                    <ImageBrush/>
                </GridView.Foreground>
                <GridView.Background>
                    <ImageBrush/>
                </GridView.Background>
                <GridView.SemanticZoomOwner>
                    <SemanticZoom/>
                </GridView.SemanticZoomOwner>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Height" Value="200" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="2"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>





        <Popup x:Name="logincontrol1" IsOpen="False" IsLightDismissEnabled="True" Margin="120 30 200 200" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <StackPanel Orientation="Vertical" Background="#00638D" Height="500"  x:Name="pop" Width="1030" >
                <GridView x:ConnectionId='10' x:Name="SearchPictures"
                   ItemsSource="{Binding Source={StaticResource picturesSource}}"
                   ItemTemplate="{StaticResource imageTemplate}"                                    Height="500" FontFamily="Segoe UI Light" Grid.Column="0" Grid.Row="0"  Grid.RowSpan="2" Margin="30,20,20,20" SelectionMode="Multiple" FlowDirection="LeftToRight">
                    <GridView.Foreground>
                        <ImageBrush/>
                    </GridView.Foreground>
                    <GridView.Background>
                        <ImageBrush/>
                    </GridView.Background>
                    <GridView.SemanticZoomOwner>
                        <SemanticZoom/>
                    </GridView.SemanticZoomOwner>
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Height" Value="200" />
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid MaximumRowsOrColumns="2"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </StackPanel>
        </Popup>

    </Grid>

</Page>

