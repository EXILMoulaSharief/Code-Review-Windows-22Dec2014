<Page
    x:Class="TeacherApp.Client.UI.WinApp.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='1' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                            />
                <Button Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="White" BorderThickness="0.5" Margin="400 -1 0 0"/>
                <Button x:ConnectionId='2' Margin="400,-70,0,0" Height="63" Width="200" Content="Acheivement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='3' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <Button Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button x:ConnectionId='4' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="138" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                           >
                </Button>
                <StackPanel Margin="920,-40,0,0" Height="43" Visibility="Collapsed" x:Name="SP_Search" HorizontalAlignment="Left">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Width="200" Foreground="#00638D"/>
                    <Button x:ConnectionId='7' Height="44" Width="47" Margin="198 -43 0 0"                           >
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <Image Source="Assets/selectall.png"></Image>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <Image Source="Assets/undo.png" Width="20" />
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <Image Source="Assets/pinico.png"></Image>
                </AppBarButton>
                <AppBarButton x:ConnectionId='8' Label="List View" Margin="750 0 0 0"                           >
                    <Image Source="Assets/BottomBarContext.png"></Image>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>


    <Grid  Margin="0,0,1,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="128"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:ConnectionId='9' Grid.Column="0"  Grid.Row="0" Source="Assets/arrow_left.png" Margin="52,0,527,0" Width="65"                          />
        <Image x:ConnectionId='10'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="168,36,0,27" Width="71" HorizontalAlignment="Left" Height="65"                            />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Search" FontSize="50" Height="57" Foreground="#00638D" Margin="250,43,54,28" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="380" FontWeight="Light"/>
        <TextBox Margin="200,58,0,38" Height="40" Width="200" PlaceholderText="Find a student " Grid.Column="1" Grid.Row="0" Foreground="#E3E7EB" BorderThickness="0"/>
        <Button x:ConnectionId='11' Margin="510,55,0,33" Grid.Column="1" Grid.Row="0" Height="40" Width="43"                           >
            <Button.Background>
                <ImageBrush ImageSource="Assets/search.png"/>
            </Button.Background>
        </Button>

        <TextBlock Grid.Column="0"  Grid.Row="1" Text="Current Group" FontWeight="Light" FontSize="32" Foreground="#117BBD" Margin="107,3,0,360" HorizontalAlignment="Left"/>
        <Grid Grid.Column="0" Grid.Row="1" Margin="113,45,167,-86">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="155*"/>
                <ColumnDefinition Width="242*"/>
            </Grid.ColumnDefinitions>
            <GridView x:Name="PhotoGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="-1,-3,-35,-136"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                <GridView.ItemContainerStyle>
                    <Style
            TargetType="GridViewItem">
                        <Setter
                Property="Height"
                Value="280" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="1"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Height="230">
                            <Image Source="{Binding ImageUrl}" Width="170" Height="180" Stretch="Fill" />
                            <TextBlock Text="{Binding Name}" Width="100" Height="28" Foreground="#117BBD"  FontSize="25" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="-50 0 0 0" />
                            <TextBlock Text="{Binding Title}" Width="100" Height="18" Foreground="#117BBD"  FontSize="15" HorizontalAlignment="Center" FontWeight="Light" Margin="-50 0 0 0" />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        <TextBlock Grid.Column="0"  Grid.Row="1" Text="School" FontSize="32" Height="47" FontWeight="Light" Foreground="#117BBD" Margin="571,6,0,347" HorizontalAlignment="Left" Width="148" Grid.ColumnSpan="2"/>
        <GridView x:Name="SearchGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="572,42,129,-224"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <GridView.ItemContainerStyle>
                <Style
            TargetType="GridViewItem">
                    <Setter
                Property="Height"
                Value="280" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid MaximumRowsOrColumns="2"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Background="White" Height="230">
                        <Image Source="{Binding ImageUrl}" Width="170" Height="180" Stretch="Fill" />
                        <TextBlock Text="{Binding Name}" Width="100" Height="28" Foreground="#117BBD"  FontSize="25" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="-50 0 0 0" />
                        <TextBlock Text="{Binding Title}" Width="100" Height="18" Foreground="#117BBD"  FontSize="15" HorizontalAlignment="Center" FontWeight="Light" Margin="-50 0 0 0" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

