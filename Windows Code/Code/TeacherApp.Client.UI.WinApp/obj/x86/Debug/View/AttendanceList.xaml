<Page
    x:Class="TeacherApp.Client.UI.WinApp.AttendanceList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <AppBar x:Name="topAppBar">
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='1' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                            />
                <Button Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="White" BorderThickness="0.5" Margin="400 -1 0 0"/>
                <Button x:ConnectionId='2' Margin="400,-70,0,0" Height="63" Width="200" Content="Achievement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='3' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <!--<TextBlock Margin="1150,-60,0,0" Text="Sign Out" Height="33" Width="92" FontWeight="Light" FontSize="22" Tapped="SignOut_Tapped" Foreground="White">
                </TextBlock>-->
                <local:SignOut x:Name="signOut" FontWeight="Light" Margin="1150,-60,0,15" Height="48"></local:SignOut>
                <Button x:ConnectionId='4' Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                              BorderThickness="0">
                </Button>
                <Button Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="138" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                        >
                </Button>
                <StackPanel Margin="920,-40,0,0" Height="43" Visibility="Collapsed" x:Name="SP_Search" HorizontalAlignment="Left">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Width="200" Foreground="#00638D"/>
                    <Button x:ConnectionId='8' Height="44" Width="47" Margin="198 -43 0 0"                              >
                        <Button.Background>
                            <ImageBrush ImageSource="/Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>



    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <Image Source="/Assets/selectall.png"></Image>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <Image Source="/Assets/undo.png" Width="20" />
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <Image Source="/Assets/pinico.png"></Image>
                </AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="List View" Margin="750 0 0 0"                           >
                    <Image Source="/Assets/BottomBarContext.png"></Image>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>



    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="128"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Background="Transparent" Margin="0 0 0 0" Name="ActivityCanvas"></Canvas>
        <Image x:ConnectionId='10' Grid.Column="0"  Grid.Row="0" Source="/Assets/arrow_left.png" Margin="25,35,0,0" Width="65" Height="80" VerticalAlignment="Top"                           Grid.RowSpan="2" HorizontalAlignment="Left"/>

        <Image x:ConnectionId='11'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="119,35,0,28" Width="71" HorizontalAlignment="Left" Height="65"                            />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Attendance 9C" FontSize="50" Height="57" Foreground="#00638D" Margin="200,43,0,28" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="325" FontWeight="Light"/>
        <TextBox Margin="200,58,0,38" Height="40" Width="200" PlaceholderText="Find a student " Grid.Column="1" Grid.Row="0" Foreground="#E3E7EB" BorderThickness="0"/>
        <Button x:ConnectionId='12' Margin="510,55,0,33" Grid.Column="1" Grid.Row="0" Height="40" Width="43"                           >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/search.png"/>
            </Button.Background>
        </Button>
        <!---Child Grid-->
        <ScrollViewer Grid.Column="0"  Grid.Row="1" Grid.ColumnSpan="2">
            <Grid  Grid.Column="0"  Grid.Row="1" Grid.ColumnSpan="2" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                </Grid.RowDefinitions>
                <!---Present Grid-->
                <StackPanel x:Name="AllClassPanel" Margin="120,0,0,0"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Visibility="Visible" Height="250">
                    <Image x:Name="AllClassImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="AllClassText" Margin="25,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold" FontSize="18" Width="85" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ListView x:ConnectionId='18' x:Name="AllClassGrid" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="0,15,0,-80"  Height="325"  Grid.Column="0" Grid.Row="0"  SelectionMode="Multiple" IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top"                                                >
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="310" Height="100">
                                    <Image x:ConnectionId='19' x:Name="StudentImage" Margin="0 5 0 0"  Width="70"                                  Source="/Assets/Person.png"  Height="80" HorizontalAlignment="Left"></Image>
                                    <TextBlock Text="{Binding ChosenFullName}" Width="180" Height="30" Foreground="#117BBD"  FontSize="22" Margin="50 -90 0 0" VerticalAlignment="Center" FontWeight="Light"/>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" HorizontalAlignment="Right" Margin="0 -95 5 0"></Image>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" Margin="200 -95 5 0"></Image>
                                    <TextBlock Text="_________________________________" Width="320" Foreground="#117BBD" Margin="0 -22 0 0"  FontSize="25" FontWeight="Light"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <!---Present Grid-->
                <StackPanel x:Name="PresentPanel1" Margin="120,0,0,0"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Visibility="Collapsed" Height="250">
                    <Image x:Name="PresentImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="PresentPanelText1" Text="" Margin="25,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold" FontSize="18" Width="85" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ListView x:ConnectionId='17' x:Name="PresentList1" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="0,15,0,-80"  Height="325"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top"                                                                                  >
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="310" Height="100">
                                    <Image Source="{Binding Pic}" Margin="0 5 0 0"  Width="70" Height="80" Stretch="Fill" HorizontalAlignment="Left"></Image>
                                    <TextBlock Text="{Binding Name}" Width="180" Height="30" Foreground="#117BBD"  FontSize="25" Margin="50 -90 0 0" VerticalAlignment="Center" FontWeight="Light"/>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" HorizontalAlignment="Right" Margin="0 -95 5 0"></Image>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" Margin="200 -95 5 0"></Image>
                                    <TextBlock Text="_________________________________" Width="320" Foreground="#117BBD" Margin="0 -22 0 0"  FontSize="25" FontWeight="Light"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!---Absent Grid-->
                <StackPanel x:Name="AbsentPanel" Margin="120,20,0,0"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Visibility="Collapsed" Height="300">
                    <Image x:Name="AbsentImage" Source="" Height="20" Width="20" Margin="0,5,0,0" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
                    <TextBlock x:Name="AbsentTexBlock" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" Grid.Row="2" FontSize="18" Width="225" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
                    <ListView x:ConnectionId='16' x:Name="AbsentGrid" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" FlowDirection="LeftToRight"                                                                                  
            ItemsSource="{Binding}" Margin="0,15,0,-80"  Height="325"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="310" Height="100">
                                    <Image Source="{Binding Pic}" Margin="0 5 0 0"  Width="70" Height="80" Stretch="Fill" HorizontalAlignment="Left"></Image>
                                    <TextBlock Text="{Binding Name}" Width="180" Height="30" Foreground="#117BBD"  FontSize="25" Margin="50 -90 0 0" VerticalAlignment="Center" FontWeight="Light"/>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" HorizontalAlignment="Right" Margin="0 -95 5 0"></Image>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" Margin="200 -95 5 0"></Image>
                                    <TextBlock Text="_________________________________" Width="320" Foreground="#117BBD" Margin="0 -22 0 0"  FontSize="25" FontWeight="Light"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <!---Late Grid-->
                <StackPanel x:Name="LatePanel" Margin="120,20,0,0"  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Visibility="Collapsed" Height="300">
                    <Image x:Name="LateImage" Source="" Height="20" Width="20" Margin="0,5,0,0" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
                    <TextBlock x:Name="LateTextBlock" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" Grid.Row="3" FontSize="18" Width="225" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
                    <ListView x:ConnectionId='15' x:Name="LateGrid" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" FlowDirection="LeftToRight"                                                                                  
            ItemsSource="{Binding}" Margin="0,15,0,-80"  Height="325"  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="310" Height="100">
                                    <Image Source="{Binding Pic}" Margin="0 5 0 0"  Width="70" Height="80" Stretch="Fill" HorizontalAlignment="Left"></Image>
                                    <TextBlock Text="{Binding Name}" Width="180" Height="30" Foreground="#117BBD"  FontSize="25" Margin="50 -90 0 0" VerticalAlignment="Center" FontWeight="Light"/>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" HorizontalAlignment="Right" Margin="0 -95 5 0"></Image>
                                    <Image Source="{Binding ImageUrl}" Width="30" Height="30" Margin="200 -95 5 0"></Image>
                                    <TextBlock Text="_________________________________" Width="320" Foreground="#117BBD" Margin="0 -22 0 0"  FontSize="25" FontWeight="Light"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <!---Code Grid-->
                <StackPanel x:Name="CodePanel" Margin="120,20,0,0"  Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Visibility="Collapsed" Height="300">
                    <Image Source="Assets/IconAbsent.png" Height="20" Width="20" Margin="0,5,0,0" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
                    <TextBlock Text="LATE" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" Grid.Row="4" FontSize="18" Width="225" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
                    <ListView x:ConnectionId='14' x:Name="CodeGrid" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" FlowDirection="LeftToRight"                                                                                   
            ItemsSource="{Binding}" Margin="0,15,0,-80"  Height="350"  Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="250">
                                    <Image Source="{Binding Pic}"  Width="40" Height="50" Stretch="Fill" Margin="-220 40 0 0"></Image>
                                    <TextBlock Text="{Binding Name}" Width="180" Height="30" Foreground="#117BBD"  FontSize="25" Margin="50 -50 0 0" FontWeight="Light"/>
                                    <Image Source="{Binding ImageUrl}" Width="20" Height="30" HorizontalAlignment="Right" Margin="0 -35 5 0"></Image>
                                    <TextBlock Text="----------------------------------" Width="350" Foreground="#117BBD"  FontSize="25" VerticalAlignment="Bottom" FontWeight="Light"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Popup x:Name="logincontrol1" IsOpen="False" IsLightDismissEnabled="True" Margin="100 30 200 200" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <StackPanel Orientation="Vertical" Background="#00638D" Height="540"  x:Name="pop" Width="1060" >
                <Image x:ConnectionId='13' Source="/Assets/close.jpg" Margin="1035,0,0,0" Height="25"                           ToolTipService.ToolTip="Close"/>
                <ListView x:Name="Search" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="30,40,0,-141"  Height="450"  Width="1088" HorizontalAlignment="Left">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="300">
                                <Image Source="{Binding Pic}"  Width="40" Height="50" Stretch="Fill" Margin="-190 40 0 0"></Image>
                                <TextBlock Text="{Binding Name}" Width="180" Height="30" Foreground="White"  FontSize="25" Margin="70 -50 0 0" FontWeight="Light"/>
                                <Image Source="{Binding ImageUrl}" Width="20" Height="30" HorizontalAlignment="Right" Margin="0 -35 5 0"></Image>
                                <TextBlock Text="----------------------------------" Width="350" Foreground="White"  FontSize="25" VerticalAlignment="Bottom" FontWeight="Light"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Popup>
    </Grid>

</Page>

