<Page x:ConnectionId='1'
    x:Class="TeacherApp.Client.UI.WinApp.Achievement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >
    <Page.Resources>
        <local:ImageConverter x:Key="imageConveter"/>
        <DataTemplate x:Key="imageTemplate">
            <Grid Width="150">
                <StackPanel Height="190" Background="White">
                    <Image Source="{Binding Path=Thumbnail, Converter={StaticResource imageConveter}}" Stretch="Fill" Width="150" Height="130"/>
                    <TextBlock FontWeight="Bold" FontSize="22" Text="Mark" Width="200" Height="30" HorizontalAlignment="Left" Margin="10 10 0 0" Foreground="#117BBD"></TextBlock>
                    <TextBlock FontWeight="Light" FontSize="18" Text="Richard" Width="200" Height="30" HorizontalAlignment="Left" Margin="10 -3 0 0"  Foreground="#117BBD"></TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <CollectionViewSource
            x:Name="picturesSource"/>
    </Page.Resources>
    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='2' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                            />
                <Button x:ConnectionId='3' Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#00638D" Foreground="White" FontWeight="Light" BorderThickness="0"                               >
                </Button>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" BorderThickness="0.6" Margin="200 0 0 0" Width="1170" HorizontalAlignment="Left"/>
                <!--<Border Grid.Row="0" Grid.Column="0" BorderBrush="White" BorderThickness="0.6" Margin="597 0 0 0" Width="770" HorizontalAlignment="Left" Background="#FFF5F1F1"/>-->
                <Button Margin="400,-70,0,0" Height="72" Width="200" Content="Achievement" FontWeight="Light" FontSize="22" Background="#689AB1" Foreground="White" />
                <Button x:ConnectionId='4' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <!--<TextBlock Margin="1150,-60,0,0" Text="Sign Out" Height="33" Width="92" FontWeight="Light" FontSize="22" Tapped="SignOut_Tapped" Foreground="White">
                </TextBlock>-->
                <local:SignOut x:Name="signOut" FontWeight="Light" Margin="1150,-60,0,15" Height="48"></local:SignOut>
                <Button Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="138" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                              >
                </Button>
                <StackPanel Margin="920,-40,0,0" Height="43" Visibility="Collapsed" x:Name="SP_Search" HorizontalAlignment="Left">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Width="200" Foreground="#00638D"/>
                    <Button x:ConnectionId='8' Height="44" Width="47" Margin="198 -43 0 0"                           >
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>



    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <Image Source="Assets/selectall.png"></Image>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <Image Source="Assets/undo.png" Width="20" />
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <Image Source="Assets/pinico.png"></Image>
                </AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="List View" Margin="750 0 0 0"                           >
                    <Image Source="Assets/BottomBarContext.png"></Image>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Margin="0 10 0 0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="128"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:ConnectionId='10' Grid.Column="0"  Grid.Row="0" Source="Assets/arrow_left.png" Margin="25,35,0,0" Width="65" Height="80" VerticalAlignment="Top"                           Grid.RowSpan="2" HorizontalAlignment="Left"/>

        <Image x:ConnectionId='11'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="119,35,0,28" Width="71" HorizontalAlignment="Left" Height="65"                            />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Achievement " FontSize="50" Height="57" Foreground="#00638D" Margin="200,43,0,28" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="325" FontWeight="Light"/>
        <TextBox Margin="200,58,0,38" Height="40" Width="200" PlaceholderText="Find a student " Grid.Column="1" Grid.Row="0" Foreground="#E3E7EB" BorderThickness="0"/>
        <Button x:ConnectionId='12' Margin="510,55,0,33" Grid.Column="1" Grid.Row="0" Height="40" Width="43"                           >
            <Button.Background>
                <ImageBrush ImageSource="Assets/search.png"/>
            </Button.Background>
        </Button>
        <TextBlock Grid.Column="1"  Grid.Row="1" Text="Students Involved" FontSize="30" Height="47" FontWeight="Light" Foreground="#00638D" Margin="0,19,0,334" HorizontalAlignment="Left" FontFamily="Segoe UI Light"/>
        <Grid Grid.Column="1" Grid.Row="1" Margin="0,71,119,-86">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="229*"/>
                <ColumnDefinition Width="256*"/>
            </Grid.ColumnDefinitions>
            <GridView x:Name="gvPictures" HorizontalAlignment="Left" Margin="1,0,0,-58" 
                  VerticalAlignment="Top" Width="480" Height="473"
                   ItemsSource="{Binding Source={StaticResource picturesSource}}"
                  ItemTemplate="{StaticResource imageTemplate}" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden"  SelectionMode="Multiple" FlowDirection="LeftToRight" />
        </Grid>
        <TextBlock Grid.Column="0"  Grid.Row="1" Text="Details" FontSize="30" FontWeight="Light" Height="47" Foreground="#00638D" Margin="119,18,0,335" HorizontalAlignment="Left" Grid.ColumnSpan="2" FontFamily="Segoe UI Light" Width="125"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="119,70,0,-134" Height="473" Width="500" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Background="White" Margin="0,5,0,0" Width="200" Height="90" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock Foreground="#00638D" Margin="10 12 0 0" Text="Time" FontSize="20"></TextBlock>
                <TextBlock Foreground="#00638D" Margin="10 2 0 0" Text="09:30" FontSize="30" Height="31"></TextBlock>
            </StackPanel>
            <StackPanel Background="White" Width="200" Height="90" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0 10 0 0">
                <TextBlock Foreground="#00638D" Margin="10 12 0 0" Text="Date" FontSize="20"></TextBlock>
                <TextBlock Foreground="#00638D" Margin="10 2 0 0" Text="08/10/2014" FontSize="30" Height="31"></TextBlock>
            </StackPanel>
            <!--<StackPanel Background="White" Width="200" Height="85" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0 10 0 0">
                <TextBlock Foreground="#00638D" Margin="10 12 0 0" Text="Location" FontSize="20"></TextBlock>
                <TextBlock Foreground="#00638D" Margin="10 2 0 0" Text="Class 1E" FontSize="30" Height="31"></TextBlock>
            </StackPanel>-->
            <StackPanel Background="White" Width="200" Height="90" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0 10 0 0">
                <TextBlock Foreground="#00638D" Margin="10 12 0 0" Text="Lesson" FontSize="20"></TextBlock>
                <TextBlock Foreground="#00638D" Margin="10 2 0 0" Text="Geography/(E/En1)" ToolTipService.ToolTip="Geography/(E/En1)" TextTrimming="CharacterEllipsis" FontSize="30" Height="37"></TextBlock>
            </StackPanel>
            <StackPanel Background="White" Width="200" Height="90" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0 10 0 0">
                <TextBlock Foreground="#00638D" Margin="10 12 0 0" Text="Recorded By" FontSize="20"></TextBlock>
                <TextBlock Foreground="#00638D" Margin="10 2 0 0" Text="Mrs Mary Anderson-Shotton" ToolTipService.ToolTip="Mrs Mary Anderson-Shotton" TextTrimming="CharacterEllipsis" FontSize="30" Height="31"></TextBlock>
            </StackPanel>

            <StackPanel Margin="210 -690 0 0" Grid.Column="1" Grid.Row="1" Height="90" Background="White">
                <TextBlock Foreground="#00638D" Margin="5 13 0 0" Text="Type" FontSize="20"></TextBlock>
                <ComboBox Height="55" Margin="0,0,-1,0" Background="White" BorderThickness="0" Foreground="#FF00638D"  FontSize="20">
                    <ComboBoxItem  Content="Helpful" IsSelected="True" FontSize="30" FontWeight="Light" Foreground="#FF00638D"/>
                    <ComboBoxItem Content="Careless" IsSelected="False" FontSize="30" FontWeight="Light" Foreground="#FF00638D"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="210 -490 0 0" Grid.Column="1" Grid.Row="1" Height="86" Background="White">
                <TextBlock Foreground="#00638D" Margin="5 13 0 0" Text="Activity" FontSize="20"></TextBlock>
                <ComboBox Height="55" Margin="0,0,-1,0" Background="White" BorderThickness="0" Foreground="#FF00638D"  FontSize="20">
                    <ComboBoxItem  Content="None" IsSelected="True" FontSize="30" FontWeight="Light" Foreground="#FF00638D"/>
                    <ComboBoxItem Content="Careless" IsSelected="False" FontSize="30" FontWeight="Light" Foreground="#FF00638D"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="210 -190 0 0" Grid.Column="1" Grid.Row="1" Background="White" Height="190">
                <TextBlock Foreground="#00638D" Margin="5 13 0 0" Text="Comments:" FontSize="20"></TextBlock>
                <TextBox Margin="1,0,0,0" Height="90" BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                <Button x:ConnectionId='13' FontSize="20" FontWeight="SemiBold" Foreground="White" Background="#00638D" Content="Cancel"                             Margin="-2,15,-3,0" Height="50" Width="150"/>
                <Button x:ConnectionId='14' FontSize="20" FontWeight="SemiBold" Foreground="White" Background="#00638D" Content="Save"                           Margin="142,-50,-3,0" Height="50" Width="150"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

