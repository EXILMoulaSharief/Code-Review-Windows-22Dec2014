<Page
    x:Class="TeacherApp.Client.UI.WinApp.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='1' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                                        />
                <Button Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="White" BorderThickness="0.5" Margin="400 -1 0 0"/>
                <Button x:ConnectionId='2' Margin="400,-70,0,0" Height="63" Width="200" Content="Acheivement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='3' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <Button x:ConnectionId='4' Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                             BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                            BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='8' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="138" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                           >
                </Button>
                <StackPanel Margin="920,-40,270,0" Height="43" Visibility="Collapsed" x:Name="SP_Search">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Foreground="#00638D"/>
                    <Button Height="44" Width="47" Margin="209 -43 0 0">
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/selectall.jpg" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/undo.png" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/pinit.jpg" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="List View" Margin="800 0 0 0"                           >
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/BottomBarContext.png" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>


    <Grid  Margin="0,0,-164,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="128"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:ConnectionId='10'  Grid.Row="0" Grid.Column="0" Source="Assets/arrow_left.png" Margin="0,18,650,10" Width="50"                                      />
        <Image x:ConnectionId='11'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="120,18,545,10" Width="59" HorizontalAlignment="Left" Height="65"                                         />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Search" FontSize="50" Height="61" Foreground="#117BBD" FontWeight="Light" Margin="184,36,229,31" HorizontalAlignment="Center" VerticalAlignment="Center" Width="352"/>
        <TextBox Margin="305,57,222,31" Height="40" Text="Find a student " Grid.Column="1" Grid.Row="0" Foreground="#117BBD" BorderThickness="3"/>
        <Button Margin="540,52,0,31" Grid.Column="1" Grid.Row="0" Height="52" Width="49">
            <Button.Background>
                <ImageBrush ImageSource="Assets/search.png"/>
            </Button.Background>
        </Button>

        <TextBlock Grid.Column="0"  Grid.Row="1" Text="Current Group" FontWeight="Light" FontSize="32" Foreground="#117BBD" Margin="107,3,0,360" HorizontalAlignment="Left"/>
        <Grid Grid.Column="0" Grid.Row="1" Margin="113,45,167,-86">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="155*"/>
                <ColumnDefinition Width="242*"/>
            </Grid.ColumnDefinitions>
            <GridView x:Name="PhotoGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="-1,-3,-164,-256"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Height="700" Width="650">
                <GridView.ItemContainerStyle>
                    <Style
            TargetType="GridViewItem">
                        <Setter
                Property="Height"
                Value="280" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="1"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Height="230">
                            <Image Source="{Binding ImageUrl}" Width="170" Height="180" Stretch="Fill" />
                            <TextBlock Text="{Binding Name}" Width="100" Height="28" Foreground="#117BBD"  FontSize="25" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="-50 0 0 0" />
                            <TextBlock Text="{Binding Title}" Width="100" Height="18" Foreground="#117BBD"  FontSize="15" HorizontalAlignment="Center" FontWeight="Light" Margin="-50 0 0 0" />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        <TextBlock Grid.Column="0"  Grid.Row="1" Text="School" FontSize="32" Height="47" FontWeight="Light" Foreground="#117BBD" Margin="571,6,0,347" HorizontalAlignment="Left" Width="143"/>
        <GridView x:Name="SearchGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  SelectionMode="Multiple" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="572,42,129,-317"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <GridView.ItemContainerStyle>
                <Style
            TargetType="GridViewItem">
                    <Setter
                Property="Height"
                Value="280" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid MaximumRowsOrColumns="2"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Background="White" Height="230">
                        <Image Source="{Binding ImageUrl}" Width="170" Height="180" Stretch="Fill" />
                        <TextBlock Text="{Binding Name}" Width="100" Height="28" Foreground="#117BBD"  FontSize="25" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="-50 0 0 0" />
                        <TextBlock Text="{Binding Title}" Width="100" Height="18" Foreground="#117BBD"  FontSize="15" HorizontalAlignment="Center" FontWeight="Light" Margin="-50 0 0 0" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

