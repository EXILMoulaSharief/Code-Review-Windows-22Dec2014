<Page x:ConnectionId='1'
    x:Class="TeacherApp.Client.UI.WinApp.Attendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >
    <Page.Resources>
        <local:ImageConverter x:Key="imageConveter"/>
        <DataTemplate x:Key="imageTemplate">
            <StackPanel Height="180" Background="White">
                <Image Source="{Binding Path=Thumbnail, Converter={StaticResource imageConveter}}" Stretch="Fill" Width="170" Height="120" FlowDirection="LeftToRight"/>
                <TextBlock FontWeight="Bold" FontSize="22" Text="Mark" Width="100" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                <TextBlock FontWeight="Light" FontSize="18" Text="Richard" Width="100" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
            </StackPanel>
        </DataTemplate>
        <CollectionViewSource
            x:Name="picturesSource"/>
    </Page.Resources>
    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='2' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                                           />
                <Button Margin="200,-70,0,0" Height="65" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="White" BorderThickness="0.5" Margin="400 -1 0 0"/>
                <Button x:ConnectionId='3' Margin="400,-70,0,0" Height="63" Width="200" Content="Acheivement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='4' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                             BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                            BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='8' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='9' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="138" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                           >
                </Button>
                <StackPanel Margin="920,-40,270,0" Height="43" Visibility="Collapsed" x:Name="SP_Search">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Foreground="#00638D"/>
                    <Button Height="44" Width="47" Margin="209 -43 0 0">
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>
        </AppBar>
    </Page.TopAppBar>
    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/selectall.jpg" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/undo.png" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/pinit.jpg" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:ConnectionId='10' Label="List View" Margin="800 0 0 0"                           >
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="Assets/BottomBarContext.png" Width="20" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
    <Grid Margin="0,0,-164,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="128"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:ConnectionId='11'  Grid.Row="0" Grid.Column="0" Source="Assets/arrow_left.png" Margin="0,18,650,10" Width="50"                                      />
        <Image x:ConnectionId='12'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="120,18,545,10" Width="59" HorizontalAlignment="Left" Height="65"                                        />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Attendance 9C" FontSize="50" Height="61" FontWeight="Light" Foreground="#117BBD" Margin="193,37,220,30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="352"/>
        <TextBox Margin="305,57,222,31" Height="40" Text="Find a student " Grid.Column="1" Grid.Row="0" Foreground="Black" BorderThickness="0"/>
        <Button x:ConnectionId='13' Margin="540,52,0,31" Grid.Column="1" Grid.Row="0" Height="52" Width="49"                           >
            <Button.Background>
                <ImageBrush ImageSource="Assets/search.png"/>
            </Button.Background>
        </Button>
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="120,71,0,-86" Width="1300">
            <Grid.RowDefinitions>
                <RowDefinition Height="206*"/>
                <RowDefinition Height="209*"/>
            </Grid.RowDefinitions>
            <GridView x:ConnectionId='14' x:Name="gvPictures"
                   ItemsSource="{Binding Source={StaticResource picturesSource}}"
                   ItemTemplate="{StaticResource imageTemplate}"                                    Height="500" FontFamily="Segoe UI Light" Grid.Column="0" Grid.Row="0"  Grid.RowSpan="2" Margin="-55,0,0,-85" SelectionMode="Multiple" FlowDirection="LeftToRight">
                <GridView.Foreground>
                    <ImageBrush/>
                </GridView.Foreground>
                <GridView.Background>
                    <ImageBrush/>
                </GridView.Background>
                <GridView.SemanticZoomOwner>
                    <SemanticZoom/>
                </GridView.SemanticZoomOwner>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Height" Value="200" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="2"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>
    </Grid>
</Page>

