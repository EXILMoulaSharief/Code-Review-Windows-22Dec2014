<Page x:ConnectionId='1'
    x:Class="TeacherApp.Client.UI.WinApp.AttendanceBar1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeacherApp.Client.UI.WinApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >

    <Page.TopAppBar>
        <AppBar>
            <StackPanel Background="#00638D" Grid.Row="0" Grid.ColumnSpan="2">
                <Image x:ConnectionId='2' Source="/Assets/Icon-Small@2x.png" Margin="120,30,0,0" Width="59" HorizontalAlignment="Left" Height="65"                            />
                <Button Margin="200,-70,0,0" Height="70" Width="200" Content="Attendance" FontSize="22" Background="#689AB1" Foreground="White" FontWeight="Light">
                </Button>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" BorderThickness="0.6" Margin="398 0 0 0" Width="1170" HorizontalAlignment="Left"/>
                <Button x:ConnectionId='3' Margin="400,-70,0,0" Height="63" Width="200" Content="Acheivement" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                                 BorderThickness="0"/>
                <Button x:ConnectionId='4' Margin="600,-70,0,0" Height="63" Width="200" Content="Behaviour" FontWeight="Light" FontSize="22" Background="#00638D" Foreground="White"                               BorderThickness="0">
                </Button>
                <Button Margin="220,10,0,0" Height="40" Width="90" Content="Present" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button Margin="390,-40,0,0" Height="40" Width="90" Content="Absent" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"  BorderThickness="0">
                </Button>
                <Button x:ConnectionId='5' Margin="540,-40,0,0" Height="40" Width="90" Content="Late" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                          BorderThickness="0">
                </Button>
                <Button x:ConnectionId='6' Margin="690,-40,0,0" Height="40" Width="90" Content="Codes" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White"                           BorderThickness="0">
                </Button>
                <Button x:ConnectionId='7' Margin="800,-40,0,0" x:Name="btnSearch" Height="40" Width="119" Content="Add Students" FontSize="16" FontWeight="Light" Background="#00638D" Foreground="White" BorderThickness="0"                        >
                </Button>
                <StackPanel Margin="920,-40,0,0" Height="43" Visibility="Collapsed" x:Name="SP_Search" HorizontalAlignment="Left">
                    <TextBox Height="40" PlaceholderText="Find a student" Margin="0,0,131,0" Width="200" Foreground="#00638D"/>
                    <Button x:ConnectionId='8' Height="44" Width="47" Margin="198 -43 0 0"                              >
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/search.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock Text="Class 9C" Margin="1262,-35,190,0" FontSize="16" Foreground="White"  FontWeight="Bold" Height="24"/>
            </StackPanel>

        </AppBar>

    </Page.TopAppBar>

    <Page.BottomAppBar>
        <AppBar Background="#00638D">
            <StackPanel x:Name="AppBarStackPanel"  Orientation="Horizontal">
                <AppBarButton Label="Select All" Margin="100 0 0 0">
                    <Image Source="Assets/selectall.png"></Image>
                </AppBarButton>
                <AppBarButton Label="Undo" Margin="20 0 0 0">
                    <Image Source="Assets/undo.png" Width="20" />
                </AppBarButton>
                <AppBarButton Label="Pin" Margin="20 0 0 0">
                    <Image Source="Assets/pinico.png"></Image>
                </AppBarButton>
                <AppBarButton x:ConnectionId='9' Label="List View" Margin="750 0 0 0"                           >
                    <Image Source="Assets/BottomBarContext.png"></Image>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Margin="0,0,-4,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="/Assets/bg.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:ConnectionId='10' Grid.Column="0"  Grid.Row="0" Source="Assets/arrow_left.png" Margin="25,35,0,0" Width="65" Height="80" VerticalAlignment="Top"                           Grid.RowSpan="2" HorizontalAlignment="Left"/>

        <Image x:ConnectionId='11'  Grid.Row="0" Grid.Column="0" Source="/Assets/Icon-Small@2x.png" Margin="119,35,0,0" Width="71" HorizontalAlignment="Left" Height="65"                            />
        <TextBlock Grid.Column="0"  Grid.Row="0" Text="Attendance 9C" FontSize="50" Height="71" Foreground="#00638D" Margin="200,29,0,0" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="325" FontWeight="Light"/>
        <TextBox Margin="341,58,0,10" PlaceholderText="Find a student " Grid.Column="1" Grid.Row="0" Foreground="#E3E7EB" BorderThickness="0" Width="205" HorizontalAlignment="Left"/>
        <Button x:ConnectionId='12' Margin="512,52,0,7" Grid.Column="1" Grid.Row="0" Height="41" Width="41"                           >
            <Button.Background>
                <ImageBrush ImageSource="Assets/search.png"/>
            </Button.Background>
        </Button>
        <ScrollViewer Grid.Column="0"  Grid.Row="1" Grid.ColumnSpan="2">
            <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="30,20,0,34" HorizontalAlignment="left" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="250"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel x:Name="AllClassPanel" Margin="80,0,0,0"  Grid.Column="0" Grid.Row="0" Visibility="Visible">
                    <Image x:Name="AllClassImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="AllClassText" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" Grid.Row="0" FontSize="18" Width="225" Height="57" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>

                    <GridView x:ConnectionId='17' x:Name="AllClassGrid" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="0,-30,0,-80"  Height="300"  Grid.Column="0" SelectionMode="Multiple" Grid.Row="0" IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1147"                                                HorizontalAlignment="Left" VerticalAlignment="Top"                                   >
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="6"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="150">
                                    <StackPanel Height="190" Background="White">
                                        <Image Source="{Binding Pic}" Stretch="Fill" Width="150" Height="130"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="22" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                                        <TextBlock Text="Name" FontWeight="Light" FontSize="18" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
                <!--- Present Grid-->
                <StackPanel x:Name="PresentPanel1" Margin="120,30,0,0"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Visibility="Visible" Height="350">
                    <Image x:Name="PresentImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="PresentPanelText1" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" FontSize="18" Width="225" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <GridView x:ConnectionId='16' x:Name="PresentList1" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="-25,0,0,-80"  Height="300"  Grid.Column="0" Grid.Row="1" SelectionMode="Multiple"  IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1113" HorizontalAlignment="Left" VerticalAlignment="Top"                                                                                   >
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="150">
                                    <StackPanel Height="190" Background="White">
                                        <Image Source="{Binding Pic}" Stretch="Fill" Width="150" Height="130"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="22" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                                        <TextBlock Text="Name" FontWeight="Light" FontSize="18" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
                <!--- Absent Grid-->
                <StackPanel x:Name="AbsentPanel1" Margin="120,30,0,0"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Visibility="Visible" Height="350">
                    <Image x:Name="AbsentImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="AbsentPanelText1" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" FontSize="18" Width="225" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <GridView x:ConnectionId='15' x:Name="AbsentList1" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="-30,0,0,-80"  Height="300"  Grid.Column="0" Grid.Row="2" SelectionMode="Multiple"  IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1118" HorizontalAlignment="Left" VerticalAlignment="Top"                                                                                   >
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="150">
                                    <StackPanel Height="190" Background="White">
                                        <Image Source="{Binding Pic}" Stretch="Fill" Width="150" Height="130"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="22" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                                        <TextBlock Text="Name" FontWeight="Light" FontSize="18" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
                <!--- Late Grid-->
                <StackPanel x:Name="LatePanel1" Margin="120,30,0,0"  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Visibility="Visible" Height="350">
                    <Image x:Name="LateImage" Source="" Height="20" Width="20" Margin="0,0,0,0"  Grid.Column="0" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
                    <TextBlock x:Name="LatePanelText1" Text="" Margin="20,-20,0,0" Foreground="#9EAFB8" FontWeight="Bold"  Grid.Column="0" FontSize="18" Width="225" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <GridView x:ConnectionId='14' x:Name="LateList1" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" FlowDirection="LeftToRight"
            ItemsSource="{Binding}" Margin="0,0,0,-80"  Height="300"  Grid.Column="0" Grid.Row="3" SelectionMode="Multiple"  IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top"                                                                                   >
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate >
                                <StackPanel Width="150">
                                    <StackPanel Height="190" Background="White">
                                        <Image Source="{Binding Pic}" Stretch="Fill" Width="150" Height="130"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="22" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"></TextBlock>
                                        <TextBlock Text="Name" FontWeight="Light" FontSize="18" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Popup x:Name="logincontrol1" IsOpen="False" IsLightDismissEnabled="True" Margin="100 170 200 10" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <StackPanel Orientation="Vertical" Background="#00638D" Height="530"  x:Name="pop" Width="1060" >
                <Image x:ConnectionId='13' Source="Assets/close.jpg" Margin="1035,0,0,0" Height="25"                           ToolTipService.ToolTip="Close"/>
                <GridView x:Name="SearchGrid" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" FlowDirection="LeftToRight"
            		ItemsSource="{Binding}" Margin="20,20,0,-80"  Height="500"  Grid.Column="0" Grid.Row="0"  IsSwipeEnabled="True" Grid.ColumnSpan="2" Width="1088" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate >
                            <StackPanel Width="150">
                                <StackPanel Height="190" Background="White">
                                    <Image Source="{Binding Pic}" Stretch="Fill" Width="150" Height="130"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="22" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 10 0 0" Foreground="#117BBD"/>
                                    <TextBlock Text="Name" FontWeight="Light" FontSize="18" Width="200" Height="30" HorizontalAlignment="Left" Margin="20 -3 0 0"  Foreground="#117BBD"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </Popup>

    </Grid>

</Page>

